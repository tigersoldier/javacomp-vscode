{
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Launch JavaComp Client",
                "type": "extensionHost",
                "request": "launch",
                "runtimeExecutable": "${execPath}",
                "args": [
                    "--extensionDevelopmentPath=${workspaceRoot}"
                ],
                "stopOnEntry": false,
                "sourceMaps": true,
                "outFiles": [
                    "${workspaceRoot}/out/**/*.js"
                ],
                "preLaunchTask": "watch"
            }
        ]
    }